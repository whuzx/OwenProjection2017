<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/sql_createDatabase"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="createDatabse" />

    <Button
        android:id="@+id/sql_updateDatabase"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="updateDatabase" />

    <Button
        android:id="@+id/sql_insert"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="insert" />

    <Button
        android:id="@+id/sql_update"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="update" />

    <Button
        android:id="@+id/sql_query"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="query" />

    <Button
        android:id="@+id/sql_delete"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="delete" />

</LinearLayout>